<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/lInfo_scrollViewA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <LinearLayout
        android:id="@+id/lInfo_linearLayoutB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@color/teal_700">

        <androidx.cardview.widget.CardView
            android:id="@+id/lInfo_cardViewC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/lInfo_imageViewLogoD"
                android:layout_width="200dp"
                android:layout_height="220dp"
                android:src="@drawable/ic_utensils"
                android:contentDescription="@string/pInfo_contentDescription_imgInfoLogo"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/lInfo_textViewE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="@string/pInfo_textView_titleInfo"/>

        <TextView
            android:id="@+id/lInfo_textViewF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="12dp"
            android:textStyle="normal"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:text="@string/pInfo_TextView_infoText"/>

        <TextView
            android:id="@+id/lInfo_textViewG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="12dp"
            android:textStyle="normal"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:text="@string/pInfo_TextView_creatorApp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/l_scrollViewA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/l_linearLayoutB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:background="@color/teal_700">

        <androidx.cardview.widget.CardView
            android:id="@+id/l_cardViewD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/l_imageViewLogoE"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/ic_meal"
                android:contentDescription="@string/p_contentDescription_imageLogo"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/l_linearLayoutF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/l_textViewTitleG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:text="@string/p_TextView_title"/>

            <TextView
                android:id="@+id/l_textViewIntroH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:text="@string/l_TextView_secondTitleA"/>

            <TextView
                android:id="@+id/l_textViewIntroI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:text="@string/l_TextView_secondTitleB"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_linearLayoutJ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/l_cardViewK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/l_imageViewListL"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_checklist"
                    android:contentDescription="@string/p_contentDescription_imageChecklist"/>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/l_buttonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:backgroundTint="@color/purple_700"
                android:onClick="enter"
                android:padding="10dp"
                android:text="@string/p_Button_Enter"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>
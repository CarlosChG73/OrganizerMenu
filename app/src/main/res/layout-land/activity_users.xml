<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/lUser_scrollViewA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersActivity">

    <LinearLayout
        android:id="@+id/lUser_linearLayoutB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:background="@color/teal_700">

        <androidx.cardview.widget.CardView
            android:id="@+id/lUser_cardViewC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:id="@+id/lUser_linearLayoutD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lUser_textViewTitleE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:text="@string/pUser_TextView_titleWelcome"/>


                <ImageView
                    android:id="@+id/lUser_imageViewLogoF"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_users"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/pUsers_contentDescription_imageLogo"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lUser_cardViewG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/lUser_linearLayoutH"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/lUser_editTextI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="normal"
                    android:textSize="25sp"
                    android:hint="@string/pUser_EditText_nameUser"
                    android:drawableLeft="@drawable/ic_nameuser"/>
                <EditText
                    android:id="@+id/lUser_editTextJ"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="normal"
                    android:textSize="25sp"
                    android:hint="@string/pUser_EditText_password"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawableRight="@drawable/ic_visibility"/>

                <Button
                    android:id="@+id/lUser_buttonK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/purple_700"
                    android:onClick="weekEnter"
                    android:padding="8dp"
                    android:text="@string/pUser_Button_enter"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lUser_cardViewL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/lUser_linearLayoutM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lUser_textViewTitleN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="@string/pUser_TextView_register"/>

                <Button
                    android:id="@+id/lUser_buttonO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="6dp"
                    android:backgroundTint="@color/purple_700"
                    android:onClick="register"
                    android:padding="8dp"
                    android:text="@string/pUser_Button_createAccount"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lUser_textViewP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableRight="@drawable/ic_info"
                    android:gravity="center_horizontal"
                    android:onClick="info"
                    android:padding="12dp"
                    android:text="@string/pUser_TextView_infoApp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</HorizontalScrollView>